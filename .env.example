# Expo application configuration
# Set the base URL exposed by your Azure Static Web App (or other hosting provider).
# This value is required for native builds and for the in-app availability checks.
EXPO_PUBLIC_CHAT_BASE_URL=https://your-static-web-app-url.example.com

# Optional fallbacks used when EXPO_PUBLIC_CHAT_BASE_URL is not defined.
EXPO_PUBLIC_API_BASE_URL=
EXPO_PUBLIC_SITE_URL=

# Dedicated endpoint for the catechist agent. If omitted the chat base URL is used.
EXPO_PUBLIC_CATECHIST_BASE_URL=

# Azure Functions / API configuration
# These values must be present in `api/local.settings.json` when running locally
# and in your production environment configuration when deploying.
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_CATECHIST_AGENT_ID=
OPENAI_CATECHIST_MODEL=gpt-4o-mini
OPENAI_CATECHIST_MAX_TOKENS=8192
FILE_SEARCH_TOOL=
OPENAI_TRANSCRIBE_MODEL=gpt-4o-mini-transcribe
OPENAI_PROXY_TOKEN=
NEON_DATABASE_URL=postgres://USER:PASSWORD@HOST/dbname
NEON_DATA_API_URL=https://YOUR-ENDPOINT/neondb/rest/v1
NEON_DATA_API_KEY=
